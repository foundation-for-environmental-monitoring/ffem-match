<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:name=".app.App"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.App.Starting"
        android:usesCleartextTraffic="false"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name=".ui.MainActivity"
            android:exported="true"
            android:screenOrientation="nosensor">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.ResultListActivity"
            android:screenOrientation="nosensor"
            android:theme="@style/Theme.Collect" />
        <activity
            android:name=".ui.TestActivity"
            android:exported="true"
            android:screenOrientation="nosensor"
            android:theme="@style/Theme.Collect">
            <intent-filter>
                <action android:name="ffem.match" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ResourcesActivity"
            android:exported="false"
            android:screenOrientation="nosensor"
            android:theme="@style/Theme.Collect" />
        <activity
            android:name=".ui.ResultViewActivity"
            android:screenOrientation="nosensor"
            android:theme="@style/Theme.Collect" />
        <activity
            android:name=".preference.SettingsActivity"
            android:screenOrientation="nosensor"
            android:theme="@style/Theme.Collect" />
        <activity
            android:name=".ui.CalibrationGraphActivity"
            android:screenOrientation="nosensor"
            android:theme="@style/Theme.Collect" />
        <activity
            android:name=".ui.CalibrationsActivity"
            android:screenOrientation="nosensor"
            android:theme="@style/Theme.Collect" />
        <activity
            android:name=".ui.AboutActivity"
            android:screenOrientation="nosensor"
            android:theme="@style/Theme.Collect" />
        <activity
            android:name=".ui.WebViewActivity"
            android:screenOrientation="nosensor"
            android:theme="@style/Theme.Collect" />

        <meta-data
            android:name="firebase_analytics_collection_enabled"
            android:value="@bool/FIREBASE_ANALYTICS_ENABLED" />

        <!-- Disable Firebase advertising id -->
        <meta-data
            android:name="google_analytics_adid_collection_enabled"
            android:value="false" />
    </application>

</manifest>